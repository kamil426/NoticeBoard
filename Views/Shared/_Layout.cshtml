<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoticeBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoticeBoard.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#E6E6FA">

            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Announcement" asp-action="AllAnnouncements"><strong>Strona główna</strong></a>

                <ul class="navbar-nav">
                    <li class="nav-item me-4">
                        <a class="nav-link text-dark btn" style="background-color:#5f9ea0 " asp-area="" asp-controller="Announcement" asp-action="Announcement" asp-route-id="0"><strong>Dodaj ogłoszenie</strong></a>
                    </li>
                    <partial name="_LoginPartialLogged" />
                    <partial name="_LoginPartialUnlogged" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2023 - NoticeBoard
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
